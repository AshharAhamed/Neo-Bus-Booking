<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16sp"
    tools:context=".ui.passenger.PassengerProfileActivity">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <TableRow>

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_marginStart="8sp"
                android:layout_marginTop="16sp"
                android:fontFamily="@font/nunito_sans_extrabold"
                android:text="@string/my_profile"
                android:textSize="36sp" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="178dp"
                android:layout_height="83dp"
                android:layout_marginTop="8sp"
                app:srcCompat="@drawable/my_profile_ico" />
        </TableRow>

        <TableRow
            android:paddingTop="8sp"
            android:paddingBottom="8sp">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="27dp"
                android:layout_weight=".2"
                android:fontFamily="@font/nunito_sans"
                android:text="@string/account_id"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/AccountTxt"
                android:layout_width="230dp"
                android:layout_height="27dp"
                android:fontFamily="@font/nunito_sans"
                android:textSize="18sp" />
        </TableRow>

        <TableRow
            android:paddingTop="8sp"
            android:paddingBottom="8sp">

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="27dp"
                android:layout_weight=".2"
                android:fontFamily="@font/nunito_sans"
                android:text="@string/first_name"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.077"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.42" />

            <TextView
                android:id="@+id/FirstNameTxt"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_sans"
                android:textSize="18sp" />

        </TableRow>

        <TableRow
            android:paddingTop="8sp"
            android:paddingBottom="8sp">

            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="27dp"
                android:layout_weight=".2"
                android:fontFamily="@font/nunito_sans"
                android:text="@string/last_name"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/LastNameTxt"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_sans"
                android:textSize="18sp" />

        </TableRow>

        <TableRow
            android:paddingTop="8sp"
            android:paddingBottom="8sp">

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="27dp"
                android:layout_weight=".2"
                android:fontFamily="@font/nunito_sans"
                android:text="@string/email"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/EmailTxt"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_sans"
                android:textSize="18sp" />

        </TableRow>

        <TableRow
            android:paddingTop="8sp"
            android:paddingBottom="8sp">

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="27dp"
                android:layout_weight=".2"
                android:fontFamily="@font/nunito_sans"
                android:text="@string/mobile"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/MobileTxt"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_sans"
                android:textSize="18sp" />
        </TableRow>

        <TableRow
            android:paddingTop="8sp"
            android:paddingBottom="8sp">

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="27dp"
                android:layout_weight=".2"
                android:fontFamily="@font/nunito_sans"
                android:text="@string/type"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/TypeTxt"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_sans"
                android:textSize="18sp" />
        </TableRow>

        <TableRow
            android:paddingTop="8sp"
            android:paddingBottom="8sp">

            <TextView
                android:id="@+id/textView14"
                android:layout_width="wrap_content"
                android:layout_height="27dp"
                android:layout_weight=".2"
                android:fontFamily="@font/nunito_sans"
                android:text="@string/nic"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/NICTxt"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_sans"
                android:textSize="18sp" />

        </TableRow>

        <TableRow
            android:paddingTop="8sp"
            android:paddingBottom="8sp">

            <TextView
                android:id="@+id/textView15"
                android:layout_width="wrap_content"
                android:layout_height="27dp"
                android:layout_weight=".2"
                android:fontFamily="@font/nunito_sans"
                android:text="@string/date_of_birth"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/DoBTxt"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_sans"
                android:textSize="18sp" />
        </TableRow>
    </TableLayout>


</LinearLayout>