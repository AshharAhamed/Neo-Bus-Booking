<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16sp"
    tools:context=".ui.passenger.PassengerDeleteCardActivity">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_marginTop="22sp"
                android:layout_weight=".5"
                android:fontFamily="@font/nunito_sans_extrabold"
                android:text="@string/manage_card"
                android:textSize="36sp" />

            <ImageView
                android:layout_width="64sp"
                android:layout_height="64sp"
                android:layout_gravity="center"
                android:layout_weight=".5"
                app:srcCompat="@drawable/credit_card_ico" />
        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight=".1"
                android:text="Code"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/DeleteCardCodeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight=".9" />
        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight=".1"
                android:text="Card Number"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/DeleteCardCardNumberTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight=".9" />
        </TableRow>
    </TableLayout>


    <ImageView
        android:id="@+id/DeleteCardDeleteBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16sp"
        android:onClick="onClick"
        android:scaleType="fitXY"
        android:src="@drawable/delete_card" />

</LinearLayout>