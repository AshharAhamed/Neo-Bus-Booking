<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.neo.ticketingapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".InspectorJourney"></activity>
        <activity android:name=".InspectorHome" />
        <activity android:name=".InspectorOnGoingJourney" />
        <activity android:name=".PassengerJourneyActivity" />
        <activity android:name=".PassengerOnGoingJourneyActivity" />
        <activity android:name=".PassengerProfileActivity" />
        <activity android:name=".PassengerAccountActivity" />
        <activity android:name=".PassengerHome" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

    <uses-permission android:name="android.permission.INTERNET" />

</manifest>